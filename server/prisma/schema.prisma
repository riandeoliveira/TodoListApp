generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  todos    Todo[]

  @@map("users")
}

model Todo {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String  @db.ObjectId
  name      String
  completed Boolean
  User      User    @relation(fields: [userId], references: [id])

  @@map("todos")
}
